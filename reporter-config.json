{
    "reporterEnabled": "mocha-junit-reporter, @shelex/cypress-allure-plugin",
    "mochaJunitReporterReporterOptions": {
      "mochaFile": "cypress/reports/junit/results-[hash].xml",
      "toConsole": true,  
      "attachments": true,  
      "testsuitesTitle": "Cypress Test Results"  
    },
    "allureReporterOptions": {
      "reportDir": "allure-results",  
      "overwrite": false, 
      "useCypressStepReporter": true,  
      "cypressLogFile": "cypress/reports/allure/allure-log.txt", 
      "disableWebdriverStepsReporting": true,  
      "disableWebdriverScreenshotsReporting": false,  
      "issuePrefix": "#",  
      "enableScreenshotDiffPlugin": true  
    }
  }
  